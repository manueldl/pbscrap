# Maintainer: Manuel Domínguez López <mdomlop at gmail dot com>

_pkgver_year=2017
_pkgver_month=07
_pkgver_day=06

_gitname=pbscrap
pkgname=${_gitname}-git
pkgver=git
pkgrel=1
pkgdesc="A simple pastebin.com scraper."
arch=('any')
url="https://github.com/mdomlop/${_gitname}"
source=("git+https://github.com/mdomlop/${_gitname}.git")
md5sums=('SKIP')
license=('GPL3')
depends=('python>=3' 'python-urllib3')
makedepends=('git')
provides=(${_gitname})


pkgver() {
  cd ${srcdir}/${_gitname}
  git rev-list --count HEAD
}

build() {
    cd "${srcdir}/${_gitname}"
    ./configure
    make
    }

package() {
    cd "${srcdir}/${_gitname}"
    make install DESTDIR=${pkgdir}
}
