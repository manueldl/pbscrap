# Maintainer: Manuel Domínguez López <mdomlop at gmail dot com>

_pkgver_year=2017
_pkgver_month=04
_pkgver_day=04

_gitname=pbscrap
pkgname=${_gitname}-git
pkgver=41
pkgrel=1
pkgdesc="A simple pastebin.com scraper."
arch=('any')
url="https://github.com/manueldl/${_gitname}"
source=("git+https://github.com/manueldl/${_gitname}.git")
license=('GPL3')
depends=('python>=3' 'python-urllib3')
makedepends=('git')
conflicts=(${_gitname})

md5sums=('SKIP')

pkgver() {
  cd ${srcdir}/${_gitname}
  git rev-list --count HEAD
}

package() {
    cd "${srcdir}/${_gitname}"
    make PREFIX=${pkgdir}/usr install
}
